@import 'mixins/index'
@import 'common/index'
@import 'main'

html,body{
  padding:0;
  margin:0;
  min-width:1200px;
  min-height: 1200px;
  font-family:$MAIN_FONT;
  font-weight:100;
}
.parallax-section{
  min-height:400px;
  background: transparent;
  background-size:cover;
}
.overlay{
  position:relative;
  &:after{
    content:'';
    position:absolute;
    width:100%;
    height:100%;
    left:0;
    top:0;
    background:rgba(26,44,52,.8);
  }
  & .container{
    position:relative;
    z-index:100;
  }
}
.button{
  &__green{
    color:#fff;
    background:#3a9e30;
    border:1px solid #3a9e30;
    border-radius:100px;
    transition:all .3s ease-in-out;
    padding: 8px 27px;
    line-height: 15px;
    &:hover{
      background:transparent;
    }
  }
}
.header{
  position:absolute;
  top:0;
  width:100%;
  color:#fff;
  z-index:90;
  padding:36px 0;
  &__logo{
    float:left;
  }
  &__menu{
    float:right;
    margin-top:11px;
    & ul{
      padding:0;
      & li{
        display:inline-block;
        list-style:none;
        margin:0 9px;
      }
    }
    & a{
      color:#fff;
      font-size:13px;
    }
  }
}
.container{
  width:1200px;
  max-width:1200px;
}
.section{
  &__head{
    padding-top:200px;
    color:#fff;
  }
}
& .slider{	
	&__navigation{
		margin-bottom:15px;
		& .owl-next, & .owl-prev{
			display:inline-block;
			vertical-align:middle;
			width:7px;
			height:12px;
			background: url('../assets/images/main-sprite.png') no-repeat;
			&:hover{
				cursor:pointer;
			}
			&.disabled{
				opacity:.3;
			}
		}
		& .owl-next{
			background-position:0 0;
		}
		& .owl-prev{
			background-position:-13px 0;	
			margin-right:20px;
		}
	}
  	&__head{
	    &__item{
	      max-width:550px;
	      padding:11px 0;
	      & h2{
	        font-size:36px; 
	        font-weight:100;
	        &>b{
	          font-weight:700; 
	        }
	      }
	    }
    }      
}
