
html,body{
  padding:0;
  margin:0;
  max-width:1200px;
  min-width:100%;
  min-height: 1200px;
  font-family:$MAIN_FONT;
  font-weight:100;
}

.navbar {
	&-toggle{
		margin-top:0;
		& .icon-bar{
			background:#fff;
		}
	}
}

.parallax-section {
  min-height: 400px;
  background: transparent;
  background-size: cover;
}

.overlay {
  position: relative;

  &:after {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background: rgba(26, 44, 52, .8);
  }

  & .custom-container {
    position: relative;
    z-index: 100;
  }
}

.button {
  border-radius: 100px;
  transition: all .3s ease-in-out;
  padding: 8px 27px;
  line-height: 15px;
  min-width: 132px;
  outline:none;
  &:hover {
    background: transparent;
  }

  &__green {
    color: #fff;
    background: #3a9e30;
    border: 1px solid #3a9e30;
  }

  &__blue {
    color: #fff;
    background: #0f87ca;
    border: 1px solid #0f87ca;

    &:hover {
      color: #0f87ca;
    }
  }
}

.header {
  position: absolute;
  top: 0;
  width: 100%;
  color: #fff;
  z-index: 100;
  padding: 36px 0;

  &__logo {
    float: left;
    padding:0;
  }

  &__menu {
    float: right;
    padding-right:0;
    & ul {
      padding: 0;

      & li {
        display: inline-block;
        vertical-align:middle;
        list-style: none;
        margin: 0 9px;
        float:none;
        & a{
        	line-height:initial;
        	padding:0;
          &:hover{
            background-color:transparent;
          }
        }
      }
    }

    & a,button {
      color: #fff;
      font-size: 13px;
      outline:none;
    }
  }
}


.custom-container {
  max-width: 1200px;
  padding-right: 15px;
  padding-left: 15px;
  margin-right: auto;
  margin-left: auto;
}

section {
  padding: 70px 0;
}

.section {
  &__title {
    font-size: 24px;
    font-weight: 400;
    text-transform: uppercase;
    text-align: center;
    margin-bottom: 20px;
  }

  &__sub-title {
    max-width: 600px;
    margin: 0 auto;
    font-weight: 100;
    font-size: 16px;
    text-align: center;
  }

  &__light {
    .section {
      &__title {
        color: #000;
      }

      &__sub-title {
        color: #000;
      }
    }
  }

  &__dark {
    .section {
      &__title {
        color: #fff;
      }

      &__sub-title {
        color: #fff;
      }
    }
  }

  &__head {
    padding-top: 200px;
    color: #fff;
    padding-bottom:35px;
    &__bottom {
      margin: 20px 0;

      &__item {
        text-align: left;
        margin-bottom:35px;
        &__icon {
          width: 40px;
          height: 40px;
          display: inline-block;
          background: url($IMAGE_PATH "main-sprite.png") no-repeat;
          margin-bottom: 20px;

          &.icon-bulb {
            background-position: -119px 0;
          }

          &.icon-layers {
            background-position: -171px 0;
          }

          &.icon-code {
            background-position: -40px 0;
          }

          &.icon-ui {
            background-position: -295px 0;
          }
        }

        &__text {
          line-height: 22px;
          font-size: 14px;
        }
      }
    }
  }

  &__our-projects {
    /* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#4d505b+0,3f4049+36,26272e+100 */
    background: #4d505b; /* Old browsers */
    background: -moz-linear-gradient(-45deg, #4d505b 0%, #3f4049 36%, #26272e 100%); /* FF3.6-15 */
    background: -webkit-linear-gradient(-45deg, #4d505b 0%, #3f4049 36%, #26272e 100%); /* Chrome10-25,Safari5.1-6 */
    background: linear-gradient(135deg, #4d505b 0%, #3f4049 36%, #26272e 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  }

  &__partners {
    background: #eff2f8;
    padding: 19px 0;
    text-align: center;

    &__partner {
      margin: 20px;
      display: inline-block;
      vertical-align: middle;
    }
  }

  &__team {
    & h2 {
      text-align: left;
      font-size: 24px;
      font-weight: 400;
      margin-bottom: 20px;
      line-height: 34px;
    }

    &__cards {
      margin-top: 70px;
    }

    &__card {
      text-align: left;
      box-shadow: 0px 1px 3px 0px rgba(0, 0, 0, .3);
      margin-bottom: 30px;
      max-width: 360px;
      display: inline-block;

      &__footer {
        padding: 15px;

        &__title {
          font-size: 18px;
          font-weight: 700;
        }

        &__desc {
          font-size: 14px;
          font-weight: 100;
        }

        & .fa {
          color: #9e9e9e;
        }

        &__social {
          margin-top: 22px;

          & a {
            display: inline-block;
            vertical-align: middle;
            margin-right: 12px;
          }
        }
      }
    }
  }

  &__testimonials {
    & .slider__navigation {
      text-align: center;
      margin-top: 68px;
    }

    &__slider {
      margin-top: 82px;

      &__quote {
        background: url($IMAGE_PATH "/icons/quote-ICON.png") no-repeat center;
        margin-bottom: 25px;
        height: 60px;
        display: block;
      }

      &__item {
        max-width: 777px;
        text-align: center;
        margin: 0 auto;

        & p {
          color: #cbddef;
          font-size: 16px;
          font-style: italic;
          text-align: center;
          line-height: 23px;
        }

        &__author {
          margin-top: 33px;

          &__image {
            position: relative;
            width: 50px;
            height: 50px;
            border-radius: 200px;
            overflow: hidden;
            margin-bottom: 15px;
            display: inline-block;

            & img {
              border-radius: 200px;
            }
          }

          &__name {
            color: #fff;
            font-size: 16px;
          }
        }
      }
    }
  }

  &__numbers {
    padding: 0;
    background: #eff2f8;

    &__item {
      margin: 50px 65px;
      display: inline-block;

      &__number {
        margin: 20px 0;
        font-weight: 400;
        font-size: 30px;
      }

      &__text {
        font-size: 20px;
      }
    }
  }

  &__plans {
    &__items {
      margin-top: 90px;
      font-size: 0;
      text-align: center;

      &__item {
        text-align: center;
        max-width: 300px;
        border: 1px solid #e0e0e0;
        border-radius: 5px;
        padding: 32px 46px;
        min-height: 414px;
        position: relative;
        display: inline-block;
        vertical-align: middle;
        z-index: 10;

        &__price {
          font-size: 30px;
          font-weight: 400;
          margin-bottom: 47px;

          & sup {
            font-size: 16px;
            font-weight: 300;
            margin-right: 6px;
          }

          & sub {
            font-size: 16px;
            font-weight: 300;
            color: #9e9e9e;
          }
        }

        & ul {
          & li {
            font-size: 15px;
            font-weight: 100;
            list-style: none;
            text-align: left;
            margin: 10px 0;

            &:before {
              content: "â€¢ ";
              color: #e0e0e0;
              font-size: 29px;
              margin-right: 24px;
              display: inline-block;
              vertical-align: middle;
            }
          }
        }

        & .button {
          position: absolute;
          font-size: 13px;
          bottom: 31px;
          left: 24.48%;

          &__blue {
            color: #0f87ca;
            border: 1px solid #0f87ca;
            background: transparent;

            &:hover {
              color: #fff;
              background: #0f87ca;
            }
          }
        }

        &.big-plan {
          & .button {
            &__blue {
              color: #fff;
              background: #0f87ca;
              border: 1px solid #0f87ca;

              &:hover {
                color: #0f87ca;
                background: transparent;
              }
            }
          }
        }
      }
    }
  }
  &__subscribe{
  	background:#eff2f8;
  	padding:55px 0 15px;
  	&__title{
  		font-weight:700;
  		font-size:24px;
  		color:#000;
  		text-align:center; 
  	}
  	&__form{
  		position:relative;
  		& button{
  			width:19px;
  			height:16px;
  			background:url($IMAGE_PATH "icons/subscribe.png")
  			position:absolute;
  			right:5px;
  			top: 30px;
    		border: none;
    		outline:none;
  		}
  	}
  }
  &__bottom{
  	padding-bottom:127px;
  	& .section__sub-title{
  		margin-bottom:50px;
  	}
  	& .custom-container{
  		text-align:center;
  	}
  	&__element{
  		margin:25px 0;
  		color:#cbddef;
  		& h4{
  			font-size:20px;
  			margin-bottom:7px;
  		}
  		& p{
  			font-size:18px;
  		}
  	}
  }
}
& footer{
	height:34px;
	margin-top:-34px;
	& p{
		color:#fff;
		font-size:12px;
		&>*{
			display:inline-block;
			vertical-align:middle;
		}
	}
}
& .slider {
  &__navigation {
    margin-bottom: 15px;

    & .owl-next,
    & .owl-prev {
      display: inline-block;
      vertical-align: middle;
      width: 7px;
      height: 12px;
      background: url($IMAGE_PATH "main-sprite.png") no-repeat;

      &:hover {
        cursor: pointer;
      }

      &.disabled {
        opacity: .3;
      }
    }

    & .owl-next {
      background-position: 0 0;
    }

    & .owl-prev {
      background-position: -13px 0;
      margin-right: 20px;
    }
  }

  &__head {
    &__item {
      max-width: 550px;
      padding: 11px 0;

      & h2 {
        font-size: 36px;
        font-weight: 100;

        & > b {
          font-weight: 700;
        }
      }
    }
  }
}

.what-we-do {
  &__features {
    margin-top: 90px;

    &__feature {
      text-align: center;
      margin-bottom:40px;	
      &__title {
        font-size: 20px;
        font-weight: 500;
        margin: 33px 0 20px;
      }

      &__text {
        font-size: 14px;
        font-weight: 100;
        line-height: 22px;
      }
    }
  }

  &__skills {
    margin: 60px 0 88px;
    background: #eff2f8;
    padding: 35px;

    &__intro {
      & h2 {
        font-weight: 400;
        font-size: 24px;
        margin-bottom: 24px;
      }

      & p {
        font-size: 14px;
        line-height: 22px;
        height: 230px;
      }
    }

    &__item {
      margin: 28px 0;

      &__label {
        color: #0f87ca;
        font-size: 15px;
        font-weight: 400;
        text-transform: uppercase;
        margin-bottom: 8px;
      }

      & .progress {
        height: 6px;
        border-radius: 100px;
        width: 92%;
        display: inline-block;

        &-bar {
          background-color: #0f87ca;
        }
      }

      &__percent {
        float: right;
        font-size: 13px;
        font-weight: 500;
        margin-top: -4px;
      }
    }
  }
}

& form {
  text-align: center;

  & input {
    outline: none;
    background: none;
    border: none;
    border-bottom: 2px solid #c3c9d3;
    width: 100%;
    margin: 13px 0;
    padding: 13px 6px;

    &:focus {
      border-bottom: 2px solid #0f87ca;
    }
  }
}

.contacts-form {
  & h2 {
    font-size: 24px;
    text-align: center;
    font-weight: 400;
    margin-bottom: 25px;
  }

  & form {
    text-align: center;

    & input {
      outline: none;
      background: none;
      border: none;
      border-bottom: 2px solid #c3c9d3;
      width: 100%;
      margin: 13px 0;
      padding: 13px 6px;

      &:focus {
        border-bottom: 2px solid #0f87ca;
      }
    }

    & button {
      margin-top: 30px;
    }
  }
}

.our-projects {
  &__buttons {
    text-align: center;
    margin: 50px 0 30px;

    &__item {
      font-size: 12px;
      color: #b7b9cb;
      margin: 0;
      padding: 10px 16px;
      border-radius: 100px;
      background: none;
      border: none;
      outline: none;
      text-transform: uppercase;

      &.active {
        background: #5f606b;
        color: #fff;
      }
    }
  }

  & .grid {
    margin:0 auto;
    &-item {
      float: left;
      width: 370px;
      height: 248px;
      overflow: hidden;
      margin-bottom: 20px;

      & img {
        max-width: 100%;
        min-width: 100%;
        height: auto;
      }
    }
  }
}