html,body{
  padding:0;
  margin:0;
  min-width:1200px;
  min-height: 1200px;
  font-family:$MAIN_FONT;
  font-weight:100;
}
.parallax-section{
  min-height:400px;
  background: transparent;
  background-size:cover;
}
.overlay{
  position:relative;
  &:after{
    content:'';
    position:absolute;
    width:100%;
    height:100%;
    left:0;
    top:0;
    background:rgba(26,44,52,.8);
  }
}
.header{
  position:absolute;
  top:0;
  width:100%;
  color:#fff;
  z-index:90;
  &__menu{
    & a{
      color:#fff;
    }
  }
}
.container{
  width:1200px;
  max-width:1200px;
}